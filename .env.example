# Block 10: Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/content_radar
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_STORAGE_BUCKET=media

# Authentication & Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key
PAT_SECRET=your-personal-access-token-secret

# Rate Limiting & Security (Block 10)
ALLOWED_ORIGINS=https://your-domain.com,chrome-extension://YOUR_EXTENSION_ID
CHROME_EXTENSION_ID=YOUR_EXTENSION_ID
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
JSON_LIMIT=1mb
LOG_LEVEL=info

# API Documentation (Block 10)
ENABLE_API_DOCS=true
API_BASE_URL=http://localhost:5000

# Services & Workers
ENABLE_WORKERS=true
MEDIA_PROVIDER=google
AUTO_TAG_FROM_ANALYSIS=true
ANALYSIS_MAX_SYNC_IMAGE_BYTES=5242880

# Capture Upload Settings
CAPTURE_MAX_UPLOAD_BYTES=52428800
CAPTURE_ALLOWED_MIME=image/*,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
CAPTURE_MAX_PDF_PAGES=200

# External API Keys
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key
BRIGHT_DATA_API_TOKEN=your-bright-data-token
BRIGHT_DATA_USERNAME=your-bright-data-username
BRIGHT_DATA_PASSWORD=your-bright-data-password

# Google Services (Optional)
GOOGLE_EXPORT_DISABLED=false

# Monitoring & Observability (Optional)
SENTRY_DSN=https://your-sentry-dsn
REDIS_URL=redis://localhost:6379

# Development Settings  
NODE_ENV=production
PORT=5000
VITE_SITE_URL=http://localhost:5173
# Extension pairing/token
EXTENSION_JWT_SECRET=
EXTENSION_PAIR_CODE_TTL_SECONDS=600
EXTENSION_TOKEN_EXPIRES_SECONDS=3600
EXTENSION_REFRESH_TTL_SECONDS=2592000
